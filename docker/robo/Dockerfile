FROM burger-war-core:latest

#-------------------------------------------------------------------------------------------------
# 実機環境での実行に必要なパッケージをインストールする
#-------------------------------------------------------------------------------------------------
 RUN apt-get update -q && apt-get install -y --no-install-recommends \
     ros-${ROS_DISTRO}-uvc-camera \
     && rm -rf /var/lib/apt/lists/*

